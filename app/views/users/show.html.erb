<div class="main user-show">
  <div class="container">
    <div class="user">
    <img src="<%="/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <!--セッションのユーザーidと表示しているユーザーidが一致する時だけ編集可能にする-->
      <% if @user.id == @current_user.id %>
          <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>
  </div>
</div>